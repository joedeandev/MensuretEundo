{
  "include": ["server/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules"]
    }
  },

  "types": ["typePatches"]
}
